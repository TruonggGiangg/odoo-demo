<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- (Tùy chọn) Chỉ giữ lại nếu chắc chắn ID tồn tại -->
        <!-- <delete id="ir_cron_sync_mongodb_data_old" model="ir.cron"/> -->

        <!-- Cron job mới để đồng bộ dữ liệu từ MongoDB -->
        <record id="ir_cron_sync_mongodb_data_new" model="ir.cron">
            <field name="name">Sync MongoDB Data</field>
            <field name="model_id" ref="model_p2p_bridge"/>
            <field name="state">code</field>
            <field name="code">model.sync_mongodb_data()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>
