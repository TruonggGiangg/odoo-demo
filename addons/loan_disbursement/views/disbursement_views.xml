<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_loan_disbursement_list" model="ir.ui.view">
        <field name="name">loan.disbursement.list</field>
        <field name="model">loan.disbursement</field>
        <field name="arch" type="xml">
            <list string="Loan Disbursements" decoration-info="status == 'draft'" decoration-warning="status == 'pending'" decoration-success="status == 'disbursed'" decoration-danger="status == 'rejected'">
                <field name="name"/>
                <field name="borrower_id"/>
                <field name="amount" sum="Total Amount"/>
                <field name="disbursement_date"/>
                <field name="status" widget="badge" decoration-info="status == 'draft'" decoration-warning="status == 'pending'" decoration-success="status == 'disbursed'" decoration-danger="status == 'rejected'"/>
                <field name="disbursement_method"/>
                <field name="blockchain_status" widget="badge" decoration-info="blockchain_status == 'pending'" decoration-success="blockchain_status == 'confirmed'" decoration-danger="blockchain_status == 'failed'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_loan_disbursement_form" model="ir.ui.view">
        <field name="name">loan.disbursement.form</field>
        <field name="model">loan.disbursement</field>
        <field name="arch" type="xml">
            <form string="Loan Disbursement">
                <header>
                    <button name="action_submit_for_approval" string="Gửi phê duyệt" type="object" class="oe_highlight" invisible="status != 'draft'"/>
                    <button name="action_approve" string="Phê duyệt" type="object" class="oe_highlight" invisible="status != 'pending'" groups="base.group_system"/>
                    <button name="action_reject" string="Từ chối" type="object" invisible="status != 'pending'" groups="base.group_system"/>
                    <button name="action_process_disbursement" string="Xử lý giải ngân" type="object" class="oe_highlight" invisible="status != 'approved'"/>
                    <button name="action_cancel" string="Hủy" type="object" invisible="status not in ('draft', 'pending')"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,pending,approved,disbursed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="loan_application_id"/>
                            <field name="borrower_id"/>
                            <field name="amount"/>
                            <field name="currency_id"/>
                            <field name="interest_amount"/>
                            <field name="total_amount"/>
                        </group>
                        <group>
                            <field name="disbursement_date"/>
                            <field name="due_date"/>
                            <field name="disbursement_method"/>
                            <field name="approval_user_id"/>
                            <field name="approval_date"/>
                        </group>
                    </group>
                    <group>
                        <group string="Thông tin ngân hàng" invisible="disbursement_method != 'bank_transfer'">
                            <field name="bank_name"/>
                            <field name="bank_account"/>
                        </group>
                        <group string="Thông tin Blockchain" invisible="disbursement_method != 'blockchain'">
                            <field name="blockchain_tx_id"/>
                            <field name="blockchain_status"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ghi chú">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_loan_disbursement_search" model="ir.ui.view">
        <field name="name">loan.disbursement.search</field>
        <field name="model">loan.disbursement</field>
        <field name="arch" type="xml">
            <search string="Search Loan Disbursements">
                <field name="name"/>
                <field name="borrower_id"/>
                <field name="loan_application_id"/>
                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Pending Approval" name="pending" domain="[('status', '=', 'pending')]"/>
                <filter string="Approved" name="approved" domain="[('status', '=', 'approved')]"/>
                <filter string="Disbursed" name="disbursed" domain="[('status', '=', 'disbursed')]"/>
                <filter string="Rejected" name="rejected" domain="[('status', '=', 'rejected')]"/>
                <separator/>
                <filter string="Bank Transfer" name="bank_transfer" domain="[('disbursement_method', '=', 'bank_transfer')]"/>
                <filter string="Blockchain" name="blockchain" domain="[('disbursement_method', '=', 'blockchain')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Disbursement Method" name="group_method" context="{'group_by': 'disbursement_method'}"/>
                    <filter string="Month" name="group_month" context="{'group_by': 'disbursement_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_loan_disbursement" model="ir.actions.act_window">
        <field name="name">Loan Disbursements</field>
        <field name="res_model">loan.disbursement</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo yêu cầu giải ngân đầu tiên
            </p>
            <p>
                Quản lý quy trình giải ngân khoản vay, bao gồm phê duyệt và xử lý thanh toán.
            </p>
        </field>
    </record>

    <!-- Loan Application Views -->
    <record id="view_loan_application_list" model="ir.ui.view">
        <field name="name">loan.application.list</field>
        <field name="model">loan.application</field>
        <field name="arch" type="xml">
            <list string="Loan Applications" decoration-info="status == 'draft'" decoration-warning="status == 'submitted'" decoration-success="status == 'approved'" decoration-danger="status == 'rejected'">
                <field name="name"/>
                <field name="borrower_id"/>
                <field name="requested_amount" sum="Total Requested"/>
                <field name="approved_amount" sum="Total Approved"/>
                <field name="interest_rate"/>
                <field name="term_months"/>
                <field name="status" widget="badge" decoration-info="status == 'draft'" decoration-warning="status == 'submitted'" decoration-success="status == 'approved'" decoration-danger="status == 'rejected'"/>
                <field name="disbursement_count"/>
            </list>
        </field>
    </record>

    <record id="view_loan_application_form" model="ir.ui.view">
        <field name="name">loan.application.form</field>
        <field name="model">loan.application</field>
        <field name="arch" type="xml">
            <form string="Loan Application">
                <header>
                    <button name="action_submit" string="Nộp đơn" type="object" class="oe_highlight" invisible="status != 'draft'"/>
                    <button name="action_approve" string="Phê duyệt" type="object" class="oe_highlight" invisible="status not in ('submitted', 'under_review')" groups="base.group_system"/>
                    <button name="action_reject" string="Từ chối" type="object" invisible="status not in ('submitted', 'under_review')" groups="base.group_system"/>
                    <button name="action_disburse" string="Tạo giải ngân" type="object" class="oe_highlight" invisible="status != 'approved'"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,submitted,approved,disbursed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="borrower_id"/>
                            <field name="loan_type_id"/>
                            <field name="requested_amount"/>
                            <field name="approved_amount"/>
                        </group>
                        <group>
                            <field name="interest_rate"/>
                            <field name="term_months"/>
                            <field name="application_date"/>
                            <field name="due_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="purpose"/>
                    </group>
                    <notebook>
                        <page string="Tính toán">
                            <group>
                                <group>
                                    <field name="monthly_payment"/>
                                    <field name="total_interest"/>
                                    <field name="total_amount"/>
                                </group>
                                <group>
                                    <field name="disbursement_count"/>
                                    <field name="blockchain_contract_id"/>
                                    <field name="blockchain_status"/>
                                </group>
                            </group>
                        </page>
                        <page string="Giải ngân">
                            <field name="disbursement_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="amount"/>
                                    <field name="disbursement_date"/>
                                    <field name="status"/>
                                    <field name="disbursement_method"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_loan_application" model="ir.actions.act_window">
        <field name="name">Loan Applications</field>
        <field name="res_model">loan.application</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_submitted': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo đơn vay đầu tiên
            </p>
            <p>
                Quản lý các đơn vay và quy trình phê duyệt.
            </p>
        </field>
    </record>
</odoo>
