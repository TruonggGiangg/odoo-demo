<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Form View -->
    <record id="view_p2p_dashboard_form" model="ir.ui.view">
        <field name="name">p2p.dashboard.form</field>
        <field name="model">p2p.dashboard</field>
        <field name="arch" type="xml">
            <form string="Bảng điều khiển P2P" create="false" edit="false" delete="false">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <button name="action_refresh_dashboard" string="Cập nhật dữ liệu" type="object" class="btn-primary"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                            <button name="action_this_month" string="Tháng này" type="object" class="btn-secondary"/>
                            <button name="action_last_month" string="Tháng trước" type="object" class="btn-secondary"/>
                            <button name="action_last_3_months" string="3 tháng qua" type="object" class="btn-secondary"/>
                            <button name="action_this_year" string="Năm nay" type="object" class="btn-secondary"/>
                        </group>
                    </group>
                    <notebook>
                        <!-- Tổng quan -->
                        <page string="Tổng quan" name="overview">
                            <div class="o_dashboard_container mt-4">
                                <!-- Thông tin khoản vay -->
                                <h3 class="mt-4 mb-4">Tổng quan khoản vay</h3>
                                <div class="row mb-4">
                                    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                                        <div class="card text-center h-100">
                                            <div class="card-body">
                                                <h5 class="card-title">Tổng số khoản vay</h5>
                                                <p class="card-text h2 text-primary mt-3">
                                                    <field name="total_loans"/>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                                        <div class="card text-center h-100">
                                            <div class="card-body">
                                                <h5 class="card-title">Tổng giá trị (VNĐ)</h5>
                                                <p class="card-text h2 text-success mt-3">
                                                    <field name="total_loan_amount" widget="monetary"/>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                                        <div class="card text-center h-100">
                                            <div class="card-body">
                                                <h5 class="card-title">Khoản vay đang hoạt động</h5>
                                                <p class="card-text h2 text-info mt-3">
                                                    <field name="active_loans"/>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                                        <div class="card text-center h-100">
                                            <div class="card-body">
                                                <h5 class="card-title">Khoản vay đã tài trợ</h5>
                                                <p class="card-text h2 text-warning mt-3">
                                                    <field name="funded_loans"/>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-4">
                                    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                                        <div class="card text-center h-100">
                                            <div class="card-body">
                                                <h5 class="card-title">Khoản vay quá hạn</h5>
                                                <p class="card-text h2 text-danger mt-3">
                                                    <field name="defaulted_loans"/>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                                        <div class="card text-center h-100">
                                            <div class="card-body">
                                                <h5 class="card-title">Khoản vay hoàn thành</h5>
                                                <p class="card-text h2 text-success mt-3">
                                                    <field name="completed_loans"/>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                                        <div class="card text-center h-100">
                                            <div class="card-body">
                                                <h5 class="card-title">Tỷ lệ gọi vốn thành công</h5>
                                                <p class="card-text h2 text-primary mt-3">
                                                    <field name="loan_funding_rate"/>%
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3 col-md-6 col-sm-12 mb-4">
                                        <div class="card text-center h-100">
                                            <div class="card-body">
                                                <h5 class="card-title">Lãi suất trung bình</h5>
                                                <p class="card-text h2 text-warning mt-3">
                                                    <field name="average_interest_rate"/>%
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Thông tin rủi ro -->
                                <h3 class="mt-5 mb-4">Tổng quan rủi ro</h3>
                                <div class="row mb-4">
                                    <div class="col-lg-12 col-md-12 col-sm-12 mb-4">
                                        <div class="card text-center h-100">
                                            <div class="card-body">
                                                <h5 class="card-title">Tỷ lệ vỡ nợ</h5>
                                                <p class="card-text h2 text-danger mt-3">
                                                    <field name="default_rate"/>%
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </page>
                        <!-- Biểu đồ khoản vay -->
                        <page string="Biểu đồ khoản vay" name="loan_charts">
                            <div class="row mt-4 mb-4">
                                <div class="col-md-6 mb-4">
                                    <h3 class="mt-3 mb-4">Trạng thái khoản vay</h3>
                                    <field name="chart_loan_status" widget="p2p_dashboard_graph" options="{'type': 'pie'}"/>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <h3 class="mt-3 mb-4">Phân loại khoản vay theo mục đích</h3>
                                    <field name="loans_by_purpose" widget="p2p_dashboard_graph" options="{'type': 'pie'}"/>
                                </div>
                            </div>
                            <div class="row mt-4 mb-4">
                                <div class="col-md-6 mb-4">
                                    <h3 class="mt-3 mb-4">Xu hướng số lượng khoản vay</h3>
                                    <field name="loan_trend_data" widget="p2p_dashboard_graph" options="{'type': 'line'}"/>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <h3 class="mt-3 mb-4">Xu hướng giá trị khoản vay</h3>
                                    <field name="loan_amount_trend_data" widget="p2p_dashboard_graph" options="{'type': 'line'}"/>
                                </div>
                            </div>
                        </page>
                        <!-- Biểu đồ rủi ro -->
                        <page string="Biểu đồ rủi ro" name="risk_charts">
                            <div class="row mt-4 mb-4">
                                <div class="col-md-12 mb-4">
                                    <h3 class="mt-3 mb-4">Rủi ro và lãi suất</h3>
                                    <field name="risk_return_data" widget="p2p_dashboard_graph" options="{'type': 'bar'}"/>
                                </div>
                            </div>
                        </page>
                        <!-- Thông tin người dùng -->
                        <page string="Thông tin người dùng" name="user_stats">
                            <group class="mt-4 mb-4">
                                <group>
                                    <field name="total_borrowers"/>
                                    <field name="active_borrowers"/>
                                </group>
                            </group>
                            <div class="mt-4 mb-4">
                                <h3 class="mt-4 mb-4">Top 5 người vay (theo giá trị khoản vay)</h3>
                                <field name="top_borrowers" widget="p2p_dashboard_graph" options="{'type': 'pie'}"/>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dashboard List View -->
    <record id="view_p2p_dashboard_list" model="ir.ui.view">
        <field name="name">p2p.dashboard.list</field>
        <field name="model">p2p.dashboard</field>
        <field name="arch" type="xml">
            <list string="Bảng điều khiển">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="total_loans"/>
                <field name="total_loan_amount" sum="Tổng giá trị khoản vay"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Dashboard Search View -->
    <record id="view_p2p_dashboard_search" model="ir.ui.view">
        <field name="name">p2p.dashboard.search</field>
        <field name="model">p2p.dashboard</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm bảng điều khiển">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <filter string="Tháng này" name="this_month"
                        domain="[('date_from','&lt;=', datetime.date.today()), ('date_to','&gt;=', datetime.date.today())]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Công ty" name="company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Dashboard Action -->
    <record id="action_p2p_dashboard" model="ir.actions.act_window">
        <field name="name">Bảng điều khiển P2P</field>
        <field name="res_model">p2p.dashboard</field>
        <field name="view_mode">form,list</field>
        <field name="search_view_id" ref="view_p2p_dashboard_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo bảng điều khiển đầu tiên của bạn
            </p>
            <p>
                Bảng điều khiển P2P cho phép bạn theo dõi và phân tích các chỉ số quan trọng
                của hệ thống cho vay ngang hàng.
            </p>
        </field>
    </record>
</odoo>