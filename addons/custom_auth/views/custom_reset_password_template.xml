<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_reset_password_inherit" inherit_id="auth_signup.reset_password">
        <xpath expr="." position="replace">
            <div class="relative min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
                <!-- Background Image -->
                <div class="absolute inset-0 z-0">
                    <img src="/custom_auth/static/src/img/background.jpg" alt="background" class="w-full h-full object-cover" />
                </div>
                <!-- Tailwind CSS and Fonts -->
                <script src="https://cdn.tailwindcss.com"></script>
                <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
                <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&amp;display=swap" rel="stylesheet"/>
                
                <script>
                    document.title = 'Đặt lại mật khẩu';
                </script>
                
                <div class="max-w-6xl w-full z-10">
                    <div class="bg-white rounded-2xl shadow-xl overflow-hidden flex min-h-[600px]">
                        <!-- Left side - Reset Password Form -->
                        <div class="w-full lg:w-1/2 p-8 lg:p-12 flex flex-col justify-center">
                            <h2 class="text-3xl font-bold text-gray-900 text-center mb-2">Đặt lại mật khẩu</h2>
                            <p class="text-gray-600 text-center mb-8">Nhập email của bạn để nhận hướng dẫn đặt lại mật khẩu</p>
                            
                            <form class="space-y-6" method="post" action="/web/reset_password">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <input type="hidden" name="redirect" t-att-value="redirect"/>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2" for="email">Email đăng ký</label>
                                    <input class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200" id="email" name="login" type="email" placeholder="example@domain.com" required="required"/>
                                </div>
                                
                                <button class="w-full bg-blue-600 text-white py-3 px-4 rounded-lg font-semibold hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200" type="submit">Gửi email đặt lại mật khẩu</button>
                            </form>
                            
                            <p class="text-center mt-6 text-sm text-gray-600">
                                Nhớ mật khẩu?
                                <a class="text-blue-600 hover:text-blue-800 font-medium transition duration-200" href="/web/login">Đăng nhập ngay</a>
                            </p>
                        </div>
                        
                        <!-- Right side - Illustration -->
                        <div class="hidden lg:block lg:w-1/2 bg-gray-50 p-0 h-full">
                            <div class="w-full h-full">
                                <img alt="Reset password illustration" class="w-full h-full object-cover rounded-none" src="/custom_auth/static/src/img/reset.jpg"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo> 